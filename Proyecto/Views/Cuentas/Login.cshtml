@model Proyecto.ViewModels.LoginViewModel

<h1>Iniciar sesión</h1>

<form asp-action="login" method="post">
  <div class="form-group">
    <label for="Usuario">USUARIO</label>
    <input type="email" class="form-control" id="Usuario" aria-describedby="Help" placeholder="Ingrese su cuenta o DNI">
    <small id="Help" class="form-text text-muted">Nunca compartas tu cuenta con alguien más else.</small>
  </div>
  <div class="form-group">
    <label for="Password">Password</label>
    <input type="password" class="form-control" id="Password" placeholder="Password">
  </div>
  
  <button type="submit" class="btn btn-primary">Ingresar</button>
</form>